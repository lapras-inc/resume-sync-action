{
  "name": "lapras-resume-sync-action",
  "version": "0.1.0",
  "description": "GitHub Action to sync resume with LAPRAS profile",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
