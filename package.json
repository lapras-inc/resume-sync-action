    "@ai-sdk/google": "^1.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "@mastra/core": "^0.12.1",
    "@mastra/loggers": "^0.10.5",
    "@mastra/mcp": "^0.10.9",
    "@types/diff": "^7.0.2",
    "diff": "^8.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "mastra": "^0.10.18",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
